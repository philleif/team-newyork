extends layout

block content
  section.agenda
    .container.grid-md
      center
        h5= meeting.via
        h2= meeting.name
        .columns
          .column.col-3.col-sm-8.col-ml-auto
            a.btn.facebook(href="#") Share on Facebook
          .column.col-3.col-sm-8.col-mr-auto
            a.btn.twitter(href="#") Share on Twitter
        hr
        .columns
          .column.col-3.col-sm-10.col-mx-auto
            h6= meeting.date
            small
              em
                p= meeting.location
            p.hide-sm
              img.img-responsive(src="https://maps.googleapis.com/maps/api/staticmap?center=" + meeting.location + "&zoom=13&size=300x300&maptype=roadmap&markers=color:red%7Clabel:%7C" + meeting.location + "&key=AIzaSyDAU86NGlydy0BQelvDwDSKjGaMz4m-nxc")
          .column.col-8.col-sm-10.col-mx-auto
            p= meeting.agenda
              br
              em via: &nbsp;
                a(href=meeting.viaLink)= meeting.via
