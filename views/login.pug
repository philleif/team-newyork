extends layout

block content
  header
    section
      .container.grid-md
        center
          if (message.length > 0)
            p
              em message
        center
          h2 Log In
          hr
          form(action='/login', method='post')
            div
              label Email:
              input(type='text', name='email')
            div
              label Password:
              input(type='password', name='password')
            div
              input(type='submit', value='Log In')
